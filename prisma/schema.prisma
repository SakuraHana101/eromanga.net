generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String  // บันทึก bcrypt hash
  createdAt DateTime @default(now())
}

model Manga {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  description String?
  coverUrl  String?
  episodes  Episode[]
  createdAt DateTime @default(now())
}

model Episode {
  id         String  @id @default(cuid())
  title      String
  episodeNum Int
  imageUrls  String  // JSON string ของ array image URLs
  releaseAt  DateTime?
  mangaId    String
  manga      Manga   @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}
